{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Concord",
  "version": "0.2.4",
  "identifier": "com.concord.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Concord",
        "width": 1280,
        "height": 800,
        "minWidth": 940,
        "minHeight": 560,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://* wss://*; img-src 'self' https://* data: blob:; media-src 'self' blob: mediastream:; style-src 'self' 'unsafe-inline'; script-src 'self' 'wasm-unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "SquadUpSquid",
    "category": "SocialNetworking",
    "shortDescription": "A familiar, modern desktop client for Matrix",
    "linux": {
      "deb": { "depends": [] },
      "appimage": { "bundleMediaFramework": true }
    },
    "windows": {
      "nsis": { "installMode": "currentUser" }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/SquadUpSquid/concord/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdBNTQ2ODU5OEZGQTYyQTUKUldTbFl2cVBXV2hVZWs3cWh4b0IycGZMdzNCeVlZcitjVDZpNGd0NVBLY3JZT1NjVzYzRGZNMlMK",
      "dialog": true
    }
  }
}
